{
  "name": "@brc-dd/run",
  "version": "0.2.1",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "*.md",
      "*.ts"
    ]
  },
  "tasks": {
    "run": "deno -A ./mod.ts -- -A",
    "release": "deno task run #/release.ts",
    "update": "deno task run #/update.ts"
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended",
        "jsr"
      ],
      "exclude": [
        "no-import-prefix"
      ]
    }
  },
  "imports": {
    "#/": "https://raw.githubusercontent.com/globalbrain/hado/v0.19.1/scripts/"
  }
}
